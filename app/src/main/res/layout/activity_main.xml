<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <poms.edu.drawingtool.DrawingView
            android:layout_width="0dp"
            android:layout_height="0dp" android:id="@+id/drawingView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/button5"/>
    <Button
            android:text="color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button2" android:padding="0dp" android:layout_margin="0dp"
            android:background="@color/colorAccent" app:layout_constraintHorizontal_chainStyle="spread_inside"/>
    <Button
            android:text="pen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button3" android:padding="0dp" android:layout_margin="0dp"
            android:background="@color/colorPrimary"/>
    <Button
            android:text="line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button6" android:padding="0dp" android:layout_margin="0dp"
            android:background="@color/colorPrimary"/>
    <Button
            android:text="photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_margin="0dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button5" android:background="@color/colorAccent"/>
    <Button
            android:text="triangle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button2" app:layout_constraintStart_toEndOf="@+id/button4"
            android:layout_marginStart="8dp" android:layout_margin="0dp"
            app:layout_constraintEnd_toStartOf="@+id/button7" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5" android:background="@color/colorPrimary"/>
    <Button
            android:text="circle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6" app:layout_constraintStart_toEndOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:padding="0dp" android:layout_margin="0dp"
            android:background="@color/colorPrimary"/>
    <Button
            android:text="rect"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button7"
            app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintEnd_toStartOf="@+id/button8"
            android:layout_marginEnd="8dp" android:layout_margin="0dp" app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintHorizontal_bias="0.5" android:background="@color/colorPrimary"/>
    <Button
            android:text="oval"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button8"
            app:layout_constraintTop_toBottomOf="@+id/button6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_margin="0dp" app:layout_constraintStart_toEndOf="@+id/button7"
            app:layout_constraintHorizontal_bias="0.5" android:background="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>